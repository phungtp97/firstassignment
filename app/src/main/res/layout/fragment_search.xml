<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:background="@color/colorAccent"
                android:layout_height="match_parent"
                tools:context=".fragmentstartup.SearchFragment">
    <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:textSize="24dp"
            style="@style/Textbold"
            android:textColor="#ffffff"
            android:text="Searching"
    />
    <TextView
            android:id="@+id/dsdsdsd"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            style="@style/Textbold"
            android:textSize="30dp"
            android:text="Enter a city name"
            android:gravity="center"
            android:textColor="#ffffff"
            android:layout_marginTop="200dp"
    />
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_below="@id/dsdsdsd"
            android:orientation="vertical"
            android:paddingLeft="16dp"
    >
        <ImageView
                android:id="@+id/fragment_search_iv_weather_icon"
                android:layout_width="34dp"
                android:layout_height="34dp"
        />
        <TextView
                android:id="@+id/fragment_search_tv_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/Textbold"
                android:textColor="#ffffff"
                android:textSize="16dp"
                android:text="cityname"/>
        <TextView
                android:id="@+id/fragment_search_tv_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:text="description"/>
        <TextView
                android:id="@+id/fragment_search_tv_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:text="temp"/>
        <TextView
                android:id="@+id/fragment_search_tv_windsp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:text="wind speed"/>
    </LinearLayout>
    <ImageView
            android:id="@+id/fragment_search_iv_search"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/lightReflect"
            android:elevation="5dp"
            android:padding="10dp"
            android:src="@drawable/ic_search"
    />
</RelativeLayout>