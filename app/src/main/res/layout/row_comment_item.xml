<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:layout_margin="10dp"
              android:elevation="6dp"
              android:background="#ffffff">
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:padding="20dp"
    >

        <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="40dp" android:layout_height="40dp"
                android:id="@+id/row_comment_iv_avatar"
                android:layout_marginRight="16dp"

        />

        <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:id="@+id/row_comment_tv_user"
                      android:orientation="vertical"
        >
            <TextView
                    android:id="@+id/row_comment_tv_username"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="username"/>
            <TextView
                    android:id="@+id/row_comment_tv_role"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="userrolw"
                    style="@style/Textthin"/>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:gravity="right"
                      android:orientation="vertical"
        >
            <TextView
                    android:id="@+id/row_comment_tv_avgscore"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="8.0"
                    android:textColor="#4286f4"
                    android:textSize="18dp"/>
            <TextView
                    android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:text="username"
                    android:textSize="12dp"
                    style="@style/Textthin"/>
        </LinearLayout>

    </LinearLayout>
    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="dsj hsjdkhs hskdsjhiowinj jdshddshj hsdhsh hshdsh nhshds"
              android:textColor="@color/grey"
              android:id="@+id/row_comment_tv_comment"
              android:paddingLeft="20dp"
              android:paddingRight="20dp"
    />
    <ImageView
            android:id="@+id/row_comment_iv_more"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:visibility="gone"
            android:clickable="true"
            android:layout_gravity="right"
            android:src="@drawable/ic_more"/>

</LinearLayout>