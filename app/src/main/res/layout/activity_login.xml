<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".LoginActivity">
    <android.support.v7.widget.RecyclerView
            android:id="@+id/activitylogin_rcv"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>
    <LinearLayout
            android:id="@+id/activity_login_rl_bottomsheet"
            android:visibility="gone"
            android:orientation="vertical"
            android:layout_width="match_parent" android:layout_height="match_parent">
        <ImageView
                android:id="@+id/activity_login_iv_dummy"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#40000000"
                android:clickable="true"/>
    <LinearLayout
            android:id="@+id/activitylogin_ll_bottomsheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:paddingBottom="20dp"
            android:layout_below="@id/activity_login_iv_dummy"
            android:layout_alignParentBottom="true"
    >
        <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/bg_grey_4radius"
                android:layout_marginRight="80dp"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="4dp"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:drawableLeft="@drawable/ic_pencil"
                android:drawablePadding="12dp"
                android:text="Edit your review"
        />
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightgrey"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
        />
        <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="20dp"
                android:drawableLeft="@drawable/ic_trash_pin"
                android:drawablePadding="12dp"
                android:text="Delete your review"
        />
    </LinearLayout>
    </LinearLayout>
</RelativeLayout>